<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="1">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/default_logo"
        android:layout_margin="@dimen/image_margin"
        android:layout_weight="1"
        android:id="@+id/bar_logo" />

    <TextView
        android:layout_width="@dimen/bar_name_width"
        android:layout_height="match_parent"
        android:gravity="center_horizontal|center_vertical"
        android:textAlignment="center"
        android:layout_marginTop="@dimen/text_margin_top_bottom"
        android:layout_marginBottom="@dimen/text_margin_top_bottom"
        android:layout_marginLeft="@dimen/text_margin_left"
        android:textAppearance="?attr/textAppearanceListItem"
        tools:text="O´Connell´s Shopping del Siglo"
        android:layout_weight="2.50"
        android:id="@+id/bar_name" />

</LinearLayout>